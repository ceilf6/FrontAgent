{
  "name": "@frontagent/mcp-file",
  "version": "0.1.0",
  "description": "MCP File Adapter - 文件操作 MCP Server",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-file-server": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/server.js",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@frontagent/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "diff": "^5.1.0",
    "ts-morph": "^21.0.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@types/diff": "^5.0.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}

